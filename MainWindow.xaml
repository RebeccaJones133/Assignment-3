<Window x:Class="CarViewer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Car &amp; Vehicle Inventory Viewer"
        Height="500"
        Width="800"
        WindowStartupLocation="CenterScreen"
        Loaded="FormLoad">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Tabbed interface -->
        <TabControl x:Name="tabContainer"
                    Grid.Row="0"
                    SelectionChanged="TabContainer_SelectionChanged">

            <!-- TAB 1: Add Inventory -->
            <TabItem x:Name="tabAdd"
                     Header="_Add Vehicles"
                     ToolTip="Add a new vehicle to the inventory">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Vehicle Type -->
                    <Label Grid.Row="0" Grid.Column="0" Margin="0,0,10,5"
                           Target="{Binding ElementName=comboVehicleType}"
                           Content="_Type:" />
                    <ComboBox x:Name="comboVehicleType"
                              Grid.Row="0" Grid.Column="1"
                              Margin="0,0,10,5"
                              ToolTip="Choose the type of vehicle (Car or Motorcycle)"/>

                    <!-- Make -->
                    <Label Grid.Row="1" Grid.Column="0" Margin="0,0,10,5"
                           Target="{Binding ElementName=comboMake}"
                           Content="_Make:"/>
                    <ComboBox x:Name="comboMake"
                              Grid.Row="1" Grid.Column="1"
                              Margin="0,0,10,5"
                              ToolTip="Select the vehicle manufacturer"/>

                    <!-- Model -->
                    <Label Grid.Row="2" Grid.Column="0" Margin="0,0,10,5"
                           Target="{Binding ElementName=textModel}"
                           Content="M_odel:"/>
                    <TextBox x:Name="textModel"
                             Grid.Row="2" Grid.Column="1"
                             Margin="0,0,10,5"
                             ToolTip="Enter the model name of the vehicle"/>

                    <!-- Year -->
                    <Label Grid.Row="3" Grid.Column="0" Margin="0,0,10,5"
                           Target="{Binding ElementName=comboYear}"
                           Content="_Year:"/>
                    <ComboBox x:Name="comboYear"
                              Grid.Row="3" Grid.Column="1"
                              Margin="0,0,10,5"
                              ToolTip="Select the model year of the vehicle"/>

                    <!-- Price -->
                    <Label Grid.Row="4" Grid.Column="0" Margin="0,0,10,5"
                           Target="{Binding ElementName=textPrice}"
                           Content="_Price:"/>
                    <TextBox x:Name="textPrice"
                             Grid.Row="4" Grid.Column="1"
                             Margin="0,0,10,5"
                             ToolTip="Enter the selling price for this vehicle"/>

                    <!-- Is New -->
                    <CheckBox x:Name="checkIsNew"
                              Grid.Row="5" Grid.Column="1"
                              Margin="0,0,10,5"
                              Content="Is _New?"
                              ToolTip="Check if the vehicle is new"/>

                    <!-- Motorcycle-specific: Has Sidecar -->
                    <CheckBox x:Name="checkHasSidecar"
                              Grid.Row="6" Grid.Column="1"
                              Margin="0,0,10,5"
                              Content="Has _Sidecar (Motorcycles only)"
                              ToolTip="Check if the motorcycle has a sidecar"/>

                    <!-- Buttons & message -->
                    <StackPanel Grid.Row="7" Grid.Column="0" Grid.ColumnSpan="2"
                                Orientation="Vertical" Margin="0,10,0,0">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                            <Button x:Name="buttonEnter"
                                    Content="_Add Vehicle"
                                    Width="110"
                                    Margin="0,0,10,0"
                                    Click="EnterVehicleClick"
                                    ToolTip="Validate and add this vehicle to the inventory"/>

                            <Button x:Name="buttonReset"
                                    Content="_Reset"
                                    Width="80"
                                    Margin="0,0,10,0"
                                    Click="ResetClick"
                                    ToolTip="Clear all fields and start fresh"/>

                            <Button x:Name="buttonExit"
                                    Content="E_xit"
                                    Width="80"
                                    Click="ExitClick"
                                    ToolTip="Close the application"/>
                        </StackPanel>

                        <Label x:Name="labelOutput"
                               Margin="0,10,0,0"
                               ToolTip="Displays validation messages and feedback to the user"/>
                    </StackPanel>
                </Grid>
            </TabItem>

            <!-- TAB 2: Inventory List -->
            <TabItem x:Name="tabList"
                     Header="_Inventory List"
                     ToolTip="View all vehicles in the inventory">
                <Grid Margin="10">
                    <ListView x:Name="listViewCars"
                              MouseDoubleClick="ListViewItem_DoubleClick">
                        <!-- Default ToString() display is fine -->
                    </ListView>
                </Grid>
            </TabItem>

            <!-- TAB 3: Statistics -->
            <TabItem x:Name="tabStats"
                     Header="_Statistics"
                     ToolTip="View statistics about the inventory">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,5">
                        <TextBlock Text="Total vehicles: " FontWeight="Bold"/>
                        <TextBlock x:Name="textTotalVehicles"/>
                    </StackPanel>

                    <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,5">
                        <TextBlock Text="Total price of inventory: " FontWeight="Bold"/>
                        <TextBlock x:Name="textTotalPrice"/>
                    </StackPanel>

                    <StackPanel Grid.Row="2" Orientation="Horizontal">
                        <TextBlock Text="Average vehicle price: " FontWeight="Bold"/>
                        <TextBlock x:Name="textAveragePrice"/>
                    </StackPanel>
                </Grid>
            </TabItem>
        </TabControl>

        <!-- Status bar at bottom -->
        <StatusBar Grid.Row="1">
            <TextBlock x:Name="statusTextBlock"
                       Text="Ready."
                       ToolTip="Shows the latest status message and time"/>
        </StatusBar>
    </Grid>
</Window>